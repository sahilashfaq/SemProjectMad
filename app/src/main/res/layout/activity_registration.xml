<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/signUpLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/signup"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/deepFakeDetector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deep Fake Detector "
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_below="@id/signUpLogo"
        android:textStyle="bold"
        ></TextView>


    <EditText
        android:id="@+id/usernameR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="Name"
        android:layout_marginTop="200dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/user"
        android:ems="10"
        android:drawablePadding="10dp"
        />

    <EditText
        android:id="@+id/emailR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameR"
        android:layout_centerHorizontal="true"
        android:hint="Email"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/email"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:drawablePadding="10dp"
        />

    <EditText
        android:id="@+id/passwordR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailR"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/password"
        android:inputType="textPassword"
        android:ems="10"
        android:drawablePadding="10dp"
        />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordR"
        android:text="I have read and agree Terms and Conditions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/submitBtnR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/checkbox"
        android:text="Create Account"
        android:textSize="16dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/gotoRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Sign In."
        android:layout_below="@+id/submitBtnR"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        />

</RelativeLayout>